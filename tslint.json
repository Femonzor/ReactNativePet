{
  "extends": [
    "tslint-react"
  ],
  "rules": {
    "ordered-imports": [
      true
    ],
    "quotemark": [
      true,
      "single",
      "jsx-single",
      "avoid-escape"
    ],
    "semicolon": [
      true,
      "always"
    ],
    "member-access": [
      false
    ],
    "member-ordering": [
      false
    ],
    "trailing-comma": [
      true,
      {
        "singleline": "never",
        "multiline": "always"
      }
    ],
    "no-empty": false,
    "no-submodule-imports": false,
    "no-constant-condition": false,
    "triple-equals": [
      true,
      "allow-undefined-check"
    ],
    "ter-indent": [
      true,
      2,
      {
        "SwitchCase": 1
      }
    ],
    "jsx-alignment": true,
    "jsx-no-bind": true,
    "jsx-no-lambda": false,
    "jsx-no-multiline-js": false
  }
}
